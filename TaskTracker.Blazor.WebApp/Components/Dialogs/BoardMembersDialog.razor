@using TaskTracker.Blazor.Domain.DTOs
@using TaskTracker.Blazor.Domain.DTOs.Boards
@using TaskTracker.Blazor.Domain.DTOs.Users

<div class="modal-backdrop fade show"
     @onclick=@Close>
</div>

<div class="modal fade show d-block"
     tabindex="-1"
     style="z-index: 1051;">

    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">

            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Board Members</h5>

                <button type="button"
                        class="btn-close btn-close-white"
                        @onclick=@Close>
                </button>
            </div>

            <div class="modal-body p-4 text-dark">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary"
                             role="status">
                        </div>
                    </div>
                }
                else
                {
                    <h6 class="fw-bold mb-3">Add New Member</h6>

                    <div class="row g-2 mb-4 bg-light p-3 rounded border align-items-center">
                        <div class="col-md-7">
                            <MudAutocomplete T="UserDto"
                                             Label="Search by Name or Email"
                                             @bind-Value=@selectedUserToAdd
                                             SearchFunc=@SearchUsers
                                             ToStringFunc="@(u => u == null ? null : $"{u.FirstName} {u.LastName} ({u.Email})")"
                                             Placeholder="Start typing..."
                                             AdornmentIcon="@Icons.Material.Filled.Search"
                                             ResetValueOnEmptyText="true"
                                             CoerceText="false"
                                             Variant="Variant.Outlined"
                                             Margin="Margin.Dense" />
                        </div>

                        <div class="col-md-3">
                            <select class="form-select"
                                    style="height: 40px;"
                                    @bind=@selectedRole>
                                <option value="3">Member</option>
                                <option value="2">Admin</option>
                            </select>
                        </div>

                        <div class="col-md-2 d-grid">
                            <button class="btn btn-success"
                                    disabled=@(isAdding || selectedUserToAdd == null)
                                    @onclick=@AddSelectedMember>
                                @(isAdding ? "..." : "Add")
                            </button>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-3">Current Members (@members.Count)</h6>

                    <div class="list-group">
                        @foreach (var member in members)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                         style="width:40px; height:40px;">
                                        @(string.IsNullOrEmpty(member.UserName) ? "?" : member.UserName.Substring(0, 1).ToUpper())
                                    </div>

                                    <div>
                                        <div class="fw-bold">
                                            @(string.IsNullOrEmpty(member.UserName) ? "Unknown User" : member.UserName)
                                        </div>

                                        <small class="text-muted">@member.RoleName</small>
                                    </div>
                                </div>

                                <div>
                                    @if (member.UserId == Board.OwnerId)
                                    {
                                        <span class="badge bg-warning text-dark">Owner</span>
                                    }
                                    else
                                    {
                                        var isMe = member.UserId == currentUserId;

                                        if (isMe)
                                        {
                                            <button class="btn btn-sm btn-outline-warning"
                                                    @onclick=@(() => RemoveMember(member))>
                                                <i class="bi bi-box-arrow-right"></i> Leave
                                            </button>
                                        }
                                        else if (myRole == 1 || (myRole == 2 && member.Role == 3))
                                        {
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick=@(() => RemoveMember(member))>
                                                Remove
                                            </button>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary"
                        @onclick=@Close>
                    Close
                </button>
            </div>

        </div>
    </div>
</div>