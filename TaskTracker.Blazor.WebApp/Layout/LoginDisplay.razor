@using Microsoft.AspNetCore.Components.Authorization
@using TaskTracker.Blazor.Services.Abstraction

<AuthorizeView>
    <Authorized>
        <MudText Class="mr-4">
            Hello, <b>@context.User.Identity?.Name</b>
        </MudText>

        <MudButton Variant=@Variant.Filled
                   Color=@Color.Secondary
                   OnClick=@Logout>
            Logout
        </MudButton>
    </Authorized>

    <NotAuthorized>
        <MudButton Variant=@Variant.Text
                   Color=@Color.Inherit
                   Href="/login">
            Login
        </MudButton>

        <MudButton Variant=@Variant.Text
                   Color=@Color.Inherit
                   Href="/register">
            Register
        </MudButton>
    </NotAuthorized>
</AuthorizeView>
